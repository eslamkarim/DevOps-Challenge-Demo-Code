def TEST_STATUS = false

pipeline {
   agent any
   stages {
        stage('app testing stage') {
            steps {
                script{
                    withEnv(["CMD=tests/test.py"]) {
                        TEST_STATUS = sh (
                            script: "docker-compose up --build --abort-on-container-exit",
                            returnStatus: true
                        ) == 0
                    }
                }
            }
        }
        stage('app dev stage') {
            when{
                expression { TEST_STATUS }
            }
            steps {
                script{
                    withEnv(["CMD=hello.py"]) {
                        sh(
                            script: "docker-compose up --build --abort-on-container-exit"
                        )
                    }
                }
            }
        }
    }
}